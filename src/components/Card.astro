---
// Define the props for the component
interface Props {
  title: string;
  description?: string;
  imgSrc?: string;
  href?: string;
}

// Destructure the props from the component props
const { title, description, imgSrc, href } = Astro.props;
---

<div class="card">
  {imgSrc && <img src={imgSrc} alt={title} class="card-img" />}
  <div class="card-body">
    <h3 class="card-title">{title}</h3>
    {description && <p class="card-description">{description}</p>}
    {href && (
      <a href={href} class="card-link">
        Learn More
      </a>
    )}
  </div>
</div>

